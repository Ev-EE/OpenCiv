<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit trunk//EN" "http://www.gwtproject.org/doctype/2.8.0/gwt-module.dtd">
<module rename-to="html">
	<inherits name='com.badlogic.gdx.backends.gdx_backends_gwt' />
	<inherits name='com.badlogic.gdx.ai' />
	<inherits name='com.github.czyzby.websocket.GdxWebSocket' />
	<inherits name='com.github.czyzby.websocket.GdxWebSocketGwt' />
    <inherits name="com.badlogic.gdx.graphics.g2d.freetype.freetype-gwt" />

	<inherits name='Civilization' />
	<inherits name='Shared' />
	
	<entry-point class='me.rhin.openciv.client.HtmlLauncher' />
	<set-configuration-property name='xsiframe.failIfScriptTag' value='FALSE'/>
	<set-configuration-property name="gdx.assetpath" value="../core/assets" />
	<set-property name="user.agent" value="gecko1_8, safari"/>
	<collapse-property name="user.agent" values="*" />
	<extend-configuration-property name="gdx.reflect.include" value="me.rhin.openciv.game.unit.type" />
	<extend-configuration-property name="gdx.reflect.include" value="me.rhin.openciv.game.city.building.type" />
	<extend-configuration-property name="gdx.reflect.include" value="me.rhin.openciv.listener" />
	<extend-configuration-property name="gdx.reflect.include" value="me.rhin.openciv.shared.packet.type" />
	<extend-configuration-property name="gdx.reflect.include" value="me.rhin.openciv.networking.PacketParameter" />
	<extend-configuration-property name="gdx.reflect.include" value="me.rhin.openciv.game.unit.UnitParameter" />
	<extend-configuration-property name="gdx.reflect.include" value="me.rhin.openciv.game.city.City" />
</module>
